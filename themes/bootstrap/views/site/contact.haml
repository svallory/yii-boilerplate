:php
  $this->pageTitle=Yii::app()->name . ' - Contact Us';
  $this->breadcrumbs=array(
   'Contact',
  );

%h1 Contact Us

- if(Yii::app()->user->hasFlash('contact')):
  
  .flash-success
  	= Yii::app()->user->getFlash('contact');

- else:

  %p
    If you have business inquiries or other questions, please fill out the following form to contact us. Thank you.
  
  .form
    
    :php 
      /** @var BootActiveForm $form **/
      $form = $this->beginWidget('bootstrap.widgets.BootActiveForm', array(
          'id'=>'contact-form',
      	'type' => 'vertical',
      	'enableClientValidation'=>true,
      	'clientOptions'=>array(
      		'validateOnSubmit'=>true,
      	),
          'htmlOptions'=>array('class'=>'well'),
      ));
    
  	%p.note Fields with <span class="required">*</span> are required.
  
  	= $form->errorSummary($model)
  
  	= $form->textFieldRow($model,'name')
  	
  	= $form->textFieldRow($model,'email')
  	
  	= $form->textFieldRow($model,'subject',array('maxlength'=>128, 'class'=>'span6'))
  	
  	= $form->textAreaRow($model,'body',array('class' => 'span6', 'rows'=>6, 'cols'=>150))
  	
  	<br/>
  	
  	- $this->widget('CCaptcha')
  	:php
  	  $form->textFieldRow($model,'verifyCode',
  				array('hint' => 'Please enter the letters as they are shown in the image above.<br />Letters are not case-sensitive.'))
  		
  	.form-actions
  		:php
  		  $this->widget('bootstrap.widgets.BootButton', array(
  				            'buttonType'=>'submit', 
  					          'type'=>'primary', 
  					          'label'=>'Submit'));
  
    - $this->endWidget();
  
  / form